<h2> Come here to find a nurse </h2>

<div class="card-container">
    <% @nurses.each do |nurse| %>
        <div class="nurse-card">
            <%= link_to profile_path(nurse) do%>
            <%= image_tag nurse.picture, class:"pet-image"  if nurse.picture.attached? %>
            <%= nurse.fname %><br>
            <p> From <%= nurse.address.suburb%>
            <%end%>
        </div>
    <%end%>
 
<% if @nurses.length == 0 %>
<p> Sorry... No results found...
Please try again </p>
       <%= form_tag(find_path, method: 'get') do %>
            <%= text_field_tag(:search, params[:search]) %>
            <%= submit_tag("Search", name: nil) %>
        <%end%> </p>
<% end %>