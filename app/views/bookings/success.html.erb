<% session = Stripe::Checkout::Session.retrieve(params[:session_id]) %>
<div class="content-container">
<h2> Payment Success! </h2>

<p> Thanks for your order, <%= current_user.fname%>! </p>

<table class="table">
  <thead>
    <tr>

      <th>Service</th>
      <th>Nurse</th>
      <th>Booked For</th>
      <th>Price</th>
      <th>Date Paid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>

        <td><%= booking.service.name %></td>
        <td><%= booking.service.user.fname %></td>
        <td><%= booking.pet.name rescue nil %></td>
        <td><%= number_to_currency(booking.service.price) %></td>
        <td><%= booking.created_at.strftime("%d/%m/%Y") %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>