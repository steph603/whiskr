<div class="form-signin text-center container" >
<%= image_tag("logo.png", class: "mb-4")%>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource%>

      <div class="field">

        <%= f.text_field :fname, autofocus: true, class: "form-control", placeholder: "First Name"  %>
      </div>
      <div class="field">

        <%= f.text_field :lname, autofocus: true, class: "form-control", placeholder: "Last Name"  %>
      </div>

  <div class="field">

    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email Address" %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password (6 characters minimum)"  %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Please confirm your password"  %>
  </div>


  <div class="field text-left">
<br>
      <%= f.radio_button(:is_nurse, false) %>
      <%= f.label(false, "I am a pet owner") %>
      <br>
      <%= f.radio_button(:is_nurse, true) %>
      <%= f.label(true, "I am a qualified and insured veterinary nurse") %>
      <br>
  </div>
    <br>
  <div class="field text-left">
    <%= f.label "Profile Picture" %>
    <%= f.file_field :picture, accept: 'image/png, image/jpg, image/jpeg' %>
  </div>
  <br>

  <div class="actions">
    <%= f.submit "Now some more about you..." %>
  </div>

<% end %>
  </div>